generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Shortener {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  href String
  hash String @unique

  redirectings Int @default(0)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now()) @updatedAt
  analytics Analytic[]

  @@map("shorteners")
}

model Analytic {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userAgent   String
  shortenerId String    @db.ObjectId
  shortener   Shortener @relation(fields: [shortenerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("analytics")
}
